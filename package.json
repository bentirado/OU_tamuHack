{
  "name": "zenith",
  "version": "1.0.0",
  "description": "Afraid of flying? Find your 'zen' with Zenith.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Parker, Ben, Javid",
    "email": "parker.e.hix-1@ou.edu"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.5.0"
  },
  "build": {
    "appId": "com.tamuHack.zenith",
    "productName": "Zenith",
    "directories": {
      "output": "dist"
    },
    "files": [
      "./about.html",
      "./safety.html",
      "./package.json",
      "./statistics.html",
      "./main.js",
      "./index.html",
      "./survey.html",
      "./preload.js",
      "./meditation.html",
      "./README.md",
      "./package-lock.json",
      "!node_modules/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icons/win-icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icons/mac-icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icons/linux-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/win-installer-icon.ico",
      "uninstallerIcon": "assets/icons/win-uninstaller-icon.ico",
      "deleteAppDataOnUninstall": true
    }
  }
}
